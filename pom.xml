    <repositories>
        <repository>
            <id>central</id>
            <name>Maven Repository Switchboard</name>
            <layout>default</layout>
            <url>http://repo1.maven.org/maven2</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>
    
    <distributionManagement>
        <repository>
            <id>jahiaRepository</id>
            <url>scp://maven.jahia.org/var/www/vhosts/maven.jahia.org/html/maven2</url>
        </repository>
    </distributionManagement>

